TITLE="Certificado Verde Blockchain API"
DESCRIPTION="Backend API for Certificado Verde Blockchain"
VERSION="1.0.0"
ROOT_PATH="/certificado-verde-blockchain/api"
HOST="0.0.0.0"
PORT=8000
DEBUG_MODE="true"

# Logger configuration
LOGGER_NAME="CVB_Logger"
LOGGER_LEVEL="DEBUG"
LOGGER_TARGET="FILE"
LOGGER_DIR="logs"
LOGGER_FILENAME="global.log"

# Authentication Configuration
OAUTH2_ISSUER=""
OAUTH2_CLIENT_ID=""
OAUTH2_CLIENT_SECRET=""
OAUTH2_VERIFY_SSL=false

# Database Configuration
DATABASE_DB_TYPE = "postgresql"
DATABASE_HOST = "database"
DATABASE_PORT = 5432
DATABASE_NAME = "cvb_db"
DATABASE_USERNAME = "cvb_user"
DATABASE_PASSWORD = "cvb_password"
MAX_CONNECTIONS = 20

# Blockchain Configuration
BLOCKCHAIN_CONTRACT=0x5F...
BLOCKCHAIN_ABI_PATH="/abi/CertificateRegistry.sol/CertificateRegistry.json"
BLOCKCHAIN_PROVIDER_URL="http://blockchain:8545"
BLOCKCHAIN_PRIVATE_KEY=0xac...
BLOCKCHAIN_ADMIN_ADDRESS=0xf3...

# QR Code Configuration
QRCODE_VERSION=1
QRCODE_BOX_SIZE=10
QRCODE_BORDER=4
QRCODE_VERIFY_URL_TEMPLATE="localhost:8000/certificates/verify/"

# Storage Configuration
STORAGE_ENDPOINT_URL="http://minio:9000"
STORAGE_ACCESS_KEY="minioadmin"
STORAGE_SECRET_KEY="minioadmin"
STORAGE_BUCKET_NAME="cvb-certificates"
STORAGE_REGION_NAME="us-east-1"
